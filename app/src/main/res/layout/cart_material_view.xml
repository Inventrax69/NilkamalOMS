<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_2sdp"
    android:layout_margin="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:padding="@dimen/_1sdp"
                android:text="@string/material_code"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMCode"
                android:layout_weight="0.7"
                android:padding="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.3"
                android:padding="@dimen/_1sdp"
                android:textStyle="bold"
                android:text="@string/material_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtMDescription"
                android:layout_weight="0.7"
                android:padding="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.3"
                android:padding="@dimen/_1sdp"
                android:textStyle="bold"
                android:text="@string/order_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtOrderQuantity"
                android:layout_weight="0.7"
                android:padding="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.3"
                android:padding="@dimen/_1sdp"
                android:textStyle="bold"
                android:text="@string/available_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtAvailableQuantity"
                android:layout_weight="0.7"
                android:padding="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:alpha="0.6"/>

    </LinearLayout>

</android.support.v7.widget.CardView>