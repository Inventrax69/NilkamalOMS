<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/coordinatorLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        
        <LinearLayout
            android:id="@+id/llOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="0.7"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgOne"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/one"
                    />

                <CheckBox
                    android:id="@+id/chkBoxOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imgOne"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgTwo"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/two"/>

                <CheckBox
                    android:id="@+id/chkBoxTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imgTwo"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgThree"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/three"/>

                <CheckBox
                    android:id="@+id/chkBoxThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imgThree"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnOpenCamera"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_marginEnd="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:text="@string/back"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorAccent"
                    android:drawableRight="@drawable/send"/>
                <TextView
                    android:id="@+id/txtUploadImg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/colorAccent"
                    android:gravity="left|center"
                    android:text="@string/upload"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_15sdp"/>

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>




</android.support.design.widget.CoordinatorLayout>