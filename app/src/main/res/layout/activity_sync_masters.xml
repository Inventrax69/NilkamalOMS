<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_12sdp"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@drawable/arc_layout"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_master_data"
            android:layout_gravity="center"
            android:padding="@dimen/_12sdp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_4sdp"
            android:elevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/cvItemMasterSync">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_item_sync"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Master"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="@dimen/_4sdp"/>

                    <TextView
                        android:id="@+id/tvItemMasterSyncTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sync time"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="left"
                        android:padding="@dimen/_1sdp"
                        android:textColor="@color/colorAccent"
                        />

                </LinearLayout>

            </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sync time"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="@dimen/_4sdp"
                    android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtItemMasterSync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Sync now"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/button_shape"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    />

            </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_4sdp"
            android:elevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:id="@+id/cvCustomerMasterSync">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_customer_master_sync"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customer Master"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:layout_margin="@dimen/_4sdp"/>

                        <TextView
                            android:id="@+id/tvCustomerMasterSyncTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sync time"
                            android:textSize="@dimen/_10sdp"
                            android:gravity="left"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/colorAccent"
                            />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sync time"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="left"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="@dimen/_4sdp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtCustomerMasterSync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Sync now"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>



</RelativeLayout>