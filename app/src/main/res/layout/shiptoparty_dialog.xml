<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_customer"
        android:id="@+id/textView"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:background="@color/colorAccent"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal" />

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/_4sdp"
        app:cardUseCompatPadding="false"
        android:padding="@dimen/_2sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.inventrax.falconOMS.util.searchableSpinner.SearchableSpinner
            android:layout_width="match_parent"
            android:id="@+id/customerListDropDown"
            android:layout_height="wrap_content">

        </com.example.inventrax.falconOMS.util.searchableSpinner.SearchableSpinner>

    </android.support.v7.widget.CardView>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/shipToPartyAutoComplete"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter ship to party"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"/>

</LinearLayout>